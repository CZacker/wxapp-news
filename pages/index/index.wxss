.news-tips {
    display:flex;
    padding-top: 20rpx;
}
.news-item {
    display:flex;
    width: 115rpx;
    flex-shrink: 0;
    flex-direction:column;
    align-items:center;
}
.news-tip {
  font-size: 30rpx;
  line-height: 42rpx;
}
.hotnews-wrapper{
  position: relative;
  padding-top: 200rpx;
  padding-bottom: 250rpx;
  color: rgba(255, 255, 255, 1)!important;
}
.hotnews-title{
  padding-left: 75rpx;
  padding-top: 120rpx;
  font-size: 40rpx;
}
.hotnews-list{
  display: flex;
}
.hotnews-source{
  padding-left: 75rpx;
  font-size: 30rpx;
  opacity: 0.80;
}
.hotnews-time{
  padding-left: 20rpx;
  font-size: 30rpx;
  opacity: 0.80;
}
.hotnews-bg {
  position: absolute;
  top: 35rpx;
  left: 35rpx;
  width: 680rpx;
  height: 400rpx;
  border-radius: 10rpx;
  z-index: -1;
}